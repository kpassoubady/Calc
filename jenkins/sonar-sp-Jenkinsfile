node('win') {
  stage('SCM') {
    checkout scm
  }
  stage('SonarQube Analysis') {
    def mvn = tool 'MVN-WIN';
    withSonarQubeEnv() {
    withEnv(["JAVA_HOME=$javaHome",
             "PATH=.:C:\\WINDOWS\\SYSTEM32;$mvn\\bin;$javaHome\\bin;$PATH"
        ])
      bat "${mvn}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=Calc"
      }
    }
  }
}
